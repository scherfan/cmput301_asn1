<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cmput301_asn1.EmailActivity" >

    <ListView
        android:id="@+id/archivetodolist"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="4"
        android:choiceMode="multipleChoice"
        android:clickable="true" >
    </ListView>

    <ListView
        android:id="@+id/emailtodolist"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:choiceMode="multipleChoice"
        android:clickable="true" >
    </ListView>

    <TextView
        android:id="@+id/archivetodo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="3"
        android:text="@string/email_archive_title" />

    <TextView
        android:id="@+id/emailtodo"
        android:layout_width="321dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="13dp"
        android:layout_row="1"
        android:text="@string/email_todo_title" />

</GridLayout>