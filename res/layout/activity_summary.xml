<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cmput301_asn1.SummaryActivity" >

    <TextView
        android:id="@+id/todoTotal"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/todoChecked"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/todoUnchecked"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/archiveTotal"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/archiveChecked"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/archiveUnchecked"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>