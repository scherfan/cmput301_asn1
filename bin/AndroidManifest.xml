<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cmput301_asn1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cmput301_asn1.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cmput301_asn1.ArchiveActivity"
            android:label="@string/title_activity_archive"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cmput301_asn1.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cmput301_asn1.EmailActivity"
            android:label="@string/title_activity_email"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cmput301_asn1.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cmput301_asn1.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cmput301_asn1.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cmput301_asn1.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.cmput301_asn1.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cmput301_asn1.MainActivity" />
        </activity>
    </application>

</manifest>
